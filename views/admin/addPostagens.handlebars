{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<h2>Criar postagem</h2>
<hr>
<form class="form-control p-3" action="/admin/postagens/nova" method="POST">
    <label for="titulo">Titulo</label>
    <input class="form-control mb-3" type="text" name="titulo" id="titulo">

    <label for="slug">Slug</label>
    <input class="form-control mb-3" type="text" name="slug" id="slug">

    <label for="slug">Descrição</label>
    <input class="form-control mb-3" type="text" name="descricao" id="descricao">

    <label for="slug">Conteúdo</label>
    <textarea class="form-control mb-3" type="text" name="conteudo" id="conteudo"></textarea>

    <label for="slug">Categoria</label>
    <select class="form-select mb-3" name="categoria" id="categoria">
        {{#each categorias}}
            <option value="{{_id}}">{{nome}}</option>
        {{else}}
            <option value="0">Nenhuma categoria disponível</option>
        {{/each}}

        </option>
    </select>

    <button class="btn btn-success" type="submit">Salvar</button>
</form>