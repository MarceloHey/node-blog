{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<h2>Editar categoria</h2>
<hr>
<form class="form-control p-3" action="/admin/categorias/edit" method="POST">
    <input type="hidden" name="_id" value="{{categoria._id}}">
    <label for="nome">Nome</label>
    <input value="{{categoria.nome}}" class="form-control mb-3" type="text" name="nome" id="nome">

    <label for="slug">Slug</label>
    <input value="{{categoria.slug}}" class="form-control mb-3" type="text" name="slug" id="slug">

    <button class="btn btn-success" type="submit">Editar categoria</button>
</form>