<h2>Lista de posts</h2>
<hr>
<a href="/admin/postagens/add">
    <button class="btn btn-success">Nova postagem</button>
</a>

{{#each postagens}}
<div class="card mb-3 mt-3">
    <div class="card-body">
        <h4>{{titulo}}</h4>
        <p>Descrição: {{descricao}}</p>
        <p>Conteúdo: {{conteudo}}</p>
        <small>Slug: {{slug}}</small>
        <br>
        <small>Data de criação: {{date}}</small>
        <br>
        <small>Categoria: {{categoria.nome}}</small>
        <div class=" mt-4">
            <a href="/admin/postagens/edit/{{_id}}">
                <button class="btn btn-success">Editar</button>
            </a>
            <a href="/admin/postagens/delete/{{_id}}">
                <button class="btn btn-danger">Deletar</button>
            </a>
        </div>
    </div>
</div>
{{else}}
<div class="alert alert-info mt-3">Nenhuma postagem cadastrada</div>
{{/each}}