{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<h2>Editar postagem</h2>
<hr>
<form class="form-control p-3" action="/admin/postagens/edit" method="POST">
    <input type="hidden" name="_id" value="{{postagem._id}}">

    <label for="titulo">Titulo</label>
    <input value="{{postagem.titulo}}" class="form-control mb-3" type="text" name="titulo" id="titulo">

    <label for="slug">Slug</label>
    <input value="{{postagem.slug}}" class="form-control mb-3" type="text" name="slug" id="slug">

    <label for="slug">Descrição</label>
    <input value="{{postagem.descricao}}" class="form-control mb-3" type="text" name="descricao" id="descricao">

    <label for="slug">Conteúdo</label>
    <textarea value="{{postagem.conteudo}}" class="form-control mb-3" type="text" name="conteudo"
        id="conteudo">{{postagem.conteudo}}</textarea>

    <label for="slug">Categoria</label>
    <select value="{{postagem.categoria}}" class="form-select mb-3" name="categoria" id="categoria">
        {{#each categorias}}
        <option value="{{_id}}">{{nome}}</option>
        {{else}}
        <option value="0">Nenhuma categoria disponível</option>
        {{/each}}
    </select>

    <button class="btn btn-success" type="submit">Salvar</button>
</form>